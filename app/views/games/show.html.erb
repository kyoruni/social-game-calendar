<div class="row">
  <h3 class="game-title">
    <%= @game.name %>
  </h3>
  <%= link_to edit_game_path(@game) do %>
    <%= icon('fas', 'wrench', class: "pt-2 pl-2") %>
  <% end %>
</div>

<div class="row mb-3">
  <ul class="list-inline">
    <% @game.tag_list.each do |tag| %>
      <li class="list-inline-item badge badge-color">
        <%= tag %>
      </li>
    <% end %>
  </ul>
</div>

<div id="calendar"></div>