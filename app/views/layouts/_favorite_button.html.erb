<% if user_signed_in? %>
  <% if current_user.liked?(game) %>
    <%= link_to game_liked_path(game_id), id: "favorite-button", remote: true, method: :delete do %>
      <%= icon 'fas', 'heart', class:"pt-2 pl-2" %>
      <span class="small">お気に入り解除</span>
    <% end %>
  <% else %>
    <%= link_to game_liked_path(game_id), id: "favorite-button", remote: true, method: :post do %>
      <%= icon 'far', 'heart', class:"pt-2 pl-2" %>
      <span class="small">お気に入り登録</span>
    <% end %>
  <% end %>
<% end %>