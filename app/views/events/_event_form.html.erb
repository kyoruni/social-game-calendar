<div class="col-md-7 rounded mx-auto">
  <h2 class="page-title mt-1">
    <%= icon 'fas', 'gamepad' %> イベントを登録する
  </h2>

  <div class="game mb-3">
    <!-- 登録フォーム -->
      <%= form_with model: [ game, event ], class: "form-group search-form" do |f| %>
        <!-- タイトル-->
        <div class="form-group">
          <div class="form-group__label">
            <%= f.label      :title, 'タイトル', id: "event_title", class: "text-muted mb-0" %>
            <span class="required rounded small mb-0 ml-1 mt-1 pr-1 pl-1">必須</span>
            <!-- 未入力時、メッセージを表示する領域 -->
            <span class="required__text required__text__event-title small mt-1"></span>
          </div>
          <%= f.text_field :title, class: "form-control rounded-pill mb-2",
                                  placeholder: "イベント・キャンペーン名を入力してください", autocomplete: "off" %>
        </div>
        <!-- 開始日時 -->
        <div class="form-group">
          <div class="form-group__label">
            <%= f.label :start, '開始日時', class: "text-muted mb-0" %>
            <span class="required rounded small mb-0 ml-1 mt-1 pr-1 pl-1">必須</span>
            <!-- 未入力時、メッセージを表示する領域 -->
            <span class="required__text required__text__name small mt-1"></span>
          </div>
          <%= f.datetime_select :start, {use_two_digit_numbers: true, datetime_separator: '　'},
                                  class: 'form-control bootstrap-date' %>
        </div>
        <!-- 終了日時 -->
        <div class="form-group">
          <div class="form-group__label">
            <%= f.label :end, '終了日時', class: "text-muted mb-0" %>
            <span class="required rounded small mb-0 ml-1 mt-1 pr-1 pl-1">必須</span>
            <!-- 未入力時、メッセージを表示する領域 -->
            <span class="required__text required__text__name small mt-1"></span>
          </div>
          <%= f.datetime_select :end, {use_two_digit_numbers: true, datetime_separator: '　'},
                                  class: 'form-control bootstrap-date' %>
        </div>
        <!-- ボタン -->
        <%= button_tag type: 'submit', id: "event-save-btn", class: "btn btn-okColor rounded-pill w-100" do %>
          <%= icon 'fas', 'plus' %> 登録する
        <% end %>
      <% end %>
  </div>
</div>