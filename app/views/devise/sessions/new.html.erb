<div class="sign-in-form rounded">
  <h2 class="login-title mt-3">Log in</h2>
  <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>

    <div class="col-md-4 mx-auto mt-3 mb-3">
      <div class="form-group">
        <%= f.label       :email, class: "text-muted" %><br />
        <%= f.email_field :email, autofocus: true, autocomplete: "off", class: "form-control login-form rounded-pill" %>
      </div>

      <div class="form-group">
        <%= f.label          :password, class: "text-muted" %><br />
        <%= f.password_field :password, autocomplete: "current-password", class: "form-control login-form rounded-pill" %>
      </div>

      <% if devise_mapping.rememberable? %>
        <div class="form-group">
          <div class="d-flex justify-content-center">
            <div class="form-check form-check checkbox mr-2">
              <%= f.check_box :remember_me %>
            </div>
            <%= f.label :remember_me, class: "form-check-label" %>
          </div>
        </div>
      <% end %>

      <div class="actions">
        <%= f.submit "Log in", class: "btn btn-login btn-block rounded-pill" %>
      </div>
    </div>

  <% end %>
  <div class="mb-3">
    <%= render "devise/shared/links" %>
  </div>
</div>